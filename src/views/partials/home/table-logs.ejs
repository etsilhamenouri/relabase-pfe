<div class="search-inputs">
    <div class="date-from-input-container">
        <input type="text" class="search-input" id="home-date-from-search"
            placeholder="Date from (YYYY/MM/DD)" pattern="\d{4}/\d{2}/\d{2}">
    </div>
    <div class="date-to-input-container">
        <input type="text" class="search-input" id="home-date-to-search"
            placeholder="Date to (YYYY/MM/DD)" pattern="\d{4}/\d{2}/\d{2}">
    </div>
</div>

<% const sortedLogs = [...logs].sort((a, b) => b.create_time.getTime() - a.create_time.getTime()); %>

<table id="home-table" class="table">
<tbody class="table-body">
    <% sortedLogs.forEach(log=> { %>
        <tr class="table-row" data-text="<%= log.text %>">
            <td class="table-cell light-text" data-timestamp="<%= log.create_time.getTime() %>">
                <%= formatDate(log.create_time) %>
            </td>
        </tr>
        <% }) %>
</tbody>
</table>

<%- include('script-modal.ejs') %>

<script src='js/utilities/table-script.js'></script>

